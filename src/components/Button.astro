---
const { href, label, text } = Astro.props;
---

<a
  class="border-2 duration-200 ease inline-flex items-center mb-1 mr-1 transition p-3 rounded-lg text-white border-white bg-primary-500 hover:bg-secondary-500 hover:border-primary-500"
  target="_blank"
  rel="noopener"
  href={href}
  aria-label={label}
>
  <slot />
  {text}
</a>
